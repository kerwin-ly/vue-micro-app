{
  "name": "vue-micro-app",
  "version": "1.0.0",
  "description": "A micro app",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm -r --parallel --filter=./packages/* run dev",
    "dev:main": "pnpm --filter=./packages/main run dev",
    "dev:micro": "pnpm --filter=./packages/micro run dev",
    "build": "pnpm -r --parallel --filter=./packages/* run build",
    "lint": "pnpm lint:ts",
    "lint:ts": "eslint --fix ./packages --ext .vue,.js,.ts,.tsx",
    "lint:style": "stylelint 'packages/**/*.less' --syntax less",
    "prepare": "husky install"
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kerwin-ly/vue-micro-app.git"
  },
  "keywords": [
    "vue2",
    "vue3",
    "qiankun"
  ],
  "author": "Kerwin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kerwin-ly/vue-micro-app/issues"
  },
  "homepage": "https://github.com/kerwin-ly/vue-micro-app#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "prettier": "^2.4.1",
    "husky": "^8.0.1",
    "pnpm": "^7.8.0",
    "lint-staged": "^13.0.2",
    "vue-eslint-parser": "^9.0.3"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "packageManager": "pnpm@7.8.0"
}
